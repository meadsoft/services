{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": false,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "../common-application/src/crud.service.ts",
        "../common-infrastructure/src/repository.schema.ts",
        "src/contracts/service.schema.ts"
    ],
    "references": [],
    "exclude": [
        "jest.config.ts",
        "jest.config.cts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ]
}