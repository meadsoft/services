{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "emitDeclarationOnly": false,
        "sourceMap": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*spec.ts"
    ],
    "references": [
        {
            "path": "../../packages/google/tsconfig.lib.json"
        },
        {
            "path": "../../packages/files/tsconfig.lib.json"
        },
        {
            "path": "../../packages/debug/tsconfig.lib.json"
        },
        {
            "path": "../../packages/common/tsconfig.lib.json"
        },
        {
            "path": "../../packages/auth/tsconfig.lib.json"
        }
    ]
}
